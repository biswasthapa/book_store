= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      h2 = "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      ul
        - @book.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :unit_price
    = f.text_field :unit_price
  .field
    = f.label :author
    = f.select :author_id, Author.all.pluck(:name, :id), selected: @book.author_id
  .field
    = f.label :category
    = f.select :category_id, Category.all.pluck(:name, :id), selected: @book.category_id
  .field
    = f.label :publisher
    = f.select :publisher_id, Publisher.all.pluck(:name, :id), selected: @book.publisher_id
  .field
    = f.label :book_image
    = f.file_field :book_image
  .actions = f.submit
